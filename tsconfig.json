{
  "compilerOptions": {
    "target": "ES2020", // Use modern JavaScript features
    "module": "Node16", // Use Node.js module system
    "moduleResolution": "Node16", // Resolve modules using Node.js 16+ rules
    "lib": ["ES2020"],
    "esModuleInterop": true, // Enables compatibility between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true, // Allow default imports from modules without default exports
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*.ts", "server.ts"],
  "exclude": ["node_modules", "dist"]
}
